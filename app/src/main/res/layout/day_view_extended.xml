<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="@dimen/day_view_extended_padding">

    <LinearLayout
        android:id="@+id/event_time"
        android:layout_width="@dimen/day_view_event_time_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:05 PM"
            android:textColor="#000000"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/event_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h"
            android:textSize="12dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/event_icon"
        android:layout_width="@dimen/day_view_icon"
        android:layout_height="@dimen/day_view_icon"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="@dimen/day_view_event_icon_margin"/>

    <TextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="It is a long established fact that a reader will be distracted by the readable content"
        android:textColor="#000000"
        android:textSize="@dimen/event_title_font_size"/>

</LinearLayout>